# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 79
# isort option
multi_line_output = 3
include_trailing_comma = true
skip=frontend/

[*.yml]
indent_size = 2

[*.md]
indent_size = 2
